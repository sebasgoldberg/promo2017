<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="generated.app.controller.dialog_1" xmlns:m="sap.m">
    <m:Dialog horizontalScrolling="true" showHeader="true" state="None" stretch="false" title="{Nome}" type="Standard" verticalScrolling="true">
        <m:content>
            <m:Text text="A ideia é que será exibida por cada erro/advertencia os dados do processo: Produto, Usuario responsavel, Observações." width="auto" maxLines="4" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
        </m:content>
        <m:beginButton/>
        <m:buttons>
            <m:Button text="OK" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress"/>
        </m:buttons>
        <m:customHeader/>
        <m:endButton/>
        <m:subHeader/>
    </m:Dialog>
</mvc:View>
